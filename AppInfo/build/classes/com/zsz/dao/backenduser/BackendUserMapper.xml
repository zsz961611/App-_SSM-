<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.zsz.dao.backenduser.BackendUserMapper">
 
 	<!-- 后台管理登录  -->
 	<select id="backendLogin" resultType="BackendUser">
 		select * from backend_user where userCode=#{userCode}
 	</select>
 
 	<!-- 查询所有用户 -->
 	<select id="findAllBackendUser" resultType="BackendUser">
 		select * from backend_user
 	</select>
 	
 </mapper>